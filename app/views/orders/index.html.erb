<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Status</th>
      <th>Total Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td><%= number_to_currency(order.order_items.sum { |item| item.product.price * item.quantity }) %></td>
        <td><%= link_to 'Show', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
